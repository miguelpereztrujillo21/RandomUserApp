<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activityCharacterDetail"
            type="com.example.randomuserapp.modules.detail.ProfileDetailActivity" />
    </data>

    <LinearLayout
        android:id="@+id/container_detail_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/mid_margin"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/profile_image_detail_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text_view_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_value"
            app:layout_constraintStart_toEndOf="@+id/text_view_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DirecciÃ³n" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="283:143"
            tools:src="@color/black"/>

    </LinearLayout>
</layout>
